mixin employee-item(data, props)

    //- Принимает:
    //-   data {
    //-     title:            {string} - имя
    //-     post:             {string} - должность
    //-     image:            {string} - фото
    //-   props {
    //-     mods: ''          {array}  - модификаторы блока

    if typeof (props) === 'undefined'
        - props = {};

    - let allMods = '';
    if typeof (props.mods) !== 'undefined' && props.mods
        each mods, index in props.mods
            - allMods += index ? ' ': '';
            - allMods += 'employee-item--' + mods;

    .employee-item(class = allMods)&attributes(attributes)
        .employee-item__image
            if (data.image)
                img(src=data.image)
